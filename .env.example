# SmartEdu AI Environment Configuration

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True

# Database Configuration
DATABASE_URL=mysql+pymysql://root:password@localhost/smartedu
DEV_DATABASE_URL=sqlite:///smartedu_dev.db
TEST_DATABASE_URL=sqlite:///:memory:

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@smartedu.ai

# Face Recognition Settings
FACE_RECOGNITION_TOLERANCE=0.6
FACE_RECOGNITION_MODEL=hog
FACE_ENCODING_DETECTIONS=1

# Machine Learning Settings
MODEL_RETRAINING_INTERVAL=7
PREDICTION_CONFIDENCE_THRESHOLD=0.8
RISK_ALERT_THRESHOLD=0.7

# Security Settings
WTF_CSRF_ENABLED=True
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=smartedu.log

# Feature Flags
ENABLE_FACE_RECOGNITION=True
ENABLE_ML_PREDICTIONS=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_REAL_TIME_ALERTS=True

# Performance Settings
ENABLE_PERFORMANCE_MONITORING=True
SLOW_QUERY_THRESHOLD=1000

# Backup Settings
AUTO_BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30
